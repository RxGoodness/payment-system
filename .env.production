# Production environment variables
NODE_ENV=production
APP_PORT=3000
APP_URL=https://your-production-domain.com

# Database Configuration (Production)
DATABASE_HOST=your-rds-endpoint.amazonaws.com
DATABASE_PORT=5432
DATABASE_USERNAME=payment_system_user
DATABASE_PASSWORD=your-super-secure-password
DATABASE_NAME=payment_system_prod
DATABASE_SSL=true

# JWT Configuration (Production)
JWT_SECRET=your-extremely-secure-jwt-secret-key-at-least-64-characters-long
JWT_EXPIRES_IN=24h

# Paystack Configuration (Production)
PAYSTACK_SECRET_KEY=sk_live_your_actual_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_actual_paystack_public_key
PAYSTACK_WEBHOOK_SECRET=your_actual_paystack_webhook_secret

# AWS Configuration (Production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_production_access_key
AWS_SECRET_ACCESS_KEY=your_production_secret_key
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account/payment-events-prod

# Security Configuration
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
CORS_ORIGIN=https://your-frontend-domain.com,https://your-admin-panel.com

# Monitoring and Logging
LOG_LEVEL=warn
ENABLE_LOGGING=true